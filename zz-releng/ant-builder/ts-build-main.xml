<?xml version="1.0" encoding="UTF-8"?>

<!-- main библиотеки и плагины -->
<project name="ts4-build-main" default="build">

  <!-- директория расположения общих сборочных скриптов -->
  <property name="ts-scripts-dir" location="../../../ts4-targets/ts4-definitions/scripts" />

  <!-- загрузка общих параметров -->
  <loadproperties srcFile="${ts-scripts-dir}/ts-build-commons.properties" />

  <!-- перед вызовом общих скриптов сборки следует задать директории назначения библиотек и плагинов -->
  <property name="ts-dest-dir-libs" location="../${ts.target-skf-dq-lib}" />
  <property name="ts-dest-dir-plugins" location="../${ts.target-skf-dq-main}" />

  <!-- ЦЕЛЬ: lib.jar библиотек -->
  <!-- TODO: -->
  <target name="build-lib-jar" depends="clean" description="Сборка общих плагинов">
    <ant dir="../../org.toxsoft.skf.dq.lib" antfile="${ts-scripts-dir}/ts-build-lib.xml" target="build-lib-jar" />
    <ant dir="../../org.toxsoft.skf.dq.s5" antfile="${ts-scripts-dir}/ts-build-lib.xml" target="build-lib-jar" />
    <ant dir="../../org.toxsoft.skf.dq.virtdata" antfile="${ts-scripts-dir}/ts-build-lib.xml" target="build-lib-jar" />

    <ant dir="../../org.toxsoft.skf.dq.virtdata.netnode.skatlet" antfile="ts-build-skatlet.xml" target="1_clean" />
    <ant dir="../../org.toxsoft.skf.dq.virtdata.netnode.skatlet" antfile="ts-build-skatlet.xml" target="2_build" />
    <ant dir="../../org.toxsoft.skf.dq.virtdata.netnode.skatlet" antfile="ts-build-skatlet.xml" target="3_build_deploy" />
  </target>

  <!-- ЦЕЛЬ: сборка plugin-ов -->
  <target name="build" depends="build-lib-jar" description="Сборка общих плагинов">
    <!-- сборка plugin-ов -->
    <!-- TODO: -->
    <pde.exportPlugins destination="${ts-dest-dir-plugins}"
                       exportSource="true"
                       exportSourceBundle="false"
                       exportType="directory"
                       plugins="org.toxsoft.skf.dq.lib,
                                org.toxsoft.skf.dq.s5,
                                org.toxsoft.skf.dq.virtdata"
                       useworkspacecompiledclasses="true"
                       useJARFormat="true" />
  </target>

  <!-- ЦЕЛЬ: очистка -->
  <target name="clean" description="Удаление старых версии">
    <delete failonerror="false">
      <fileset dir="${ts-dest-dir-libs}" includes="org.toxsoft.skf.dq.*" />
      <fileset dir="${ts-dest-dir-plugins}/plugins" includes="org.toxsoft.skf.dq.*" />   
    </delete>
  </target>

</project>
